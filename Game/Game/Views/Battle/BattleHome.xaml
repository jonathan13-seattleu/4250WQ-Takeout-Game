<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.BattleHome"
             Title="Temporary Battle Home Page"
             >

    <ContentPage.Content>
        <StackLayout Style="{StaticResource VerticalStack}" HorizontalOptions="CenterAndExpand">
            <Button Text="Pick Characters" Clicked="CharacterButton_Clicked"/>
            <Button Text="Battle Page" Clicked="BattleButton_Clicked"/>
            <Button Text="New Round Page" Clicked="NewRound_Clicked"/>
            <Button Text="Items Dropped Page" Clicked="ItemsDropped_Clicked"/>
            <Button Text="Score Page" Clicked="Score_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>