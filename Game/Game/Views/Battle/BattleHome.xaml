<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.BattleHome"
             >

    <ContentPage.Content>
        <StackLayout Style="{StaticResource VerticalStack}" HorizontalOptions="CenterAndExpand">
            <Label Text="Temporary Battle Home Page"/>
            <Button Text="Pick Characters" Clicked="CharacterButton_Clicked"/>
            <Button Text="Battle Page" Clicked="BattleButton_Clicked"/>
            <Button Text="Item Pool Page" Clicked="ItemPool_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>