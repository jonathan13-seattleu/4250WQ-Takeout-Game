<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.NewRoundPage"
             Title="A new round is about to begin!">

    <ContentPage.Content>
        <StackLayout Style="{StaticResource VerticalStack}">

            <ScrollView>

            <StackLayout Style="{StaticResource HorizontalStack}"
                     Spacing="80">

                    <StackLayout Style="{StaticResource VerticalStack}">

                        <Label Text="Here are the remaining Home Players:"></Label>

                        <FlexLayout x:Name="PartyListFrame"
                                    JustifyContent="Start"
                                    AlignContent="Start"
                                    Wrap="Wrap"/>

                    </StackLayout>

                </StackLayout>

            </ScrollView>

            <Button Clicked="BeginButton_Clicked" Text="Begin Round"/>

        </StackLayout>
            

    </ContentPage.Content>
</ContentPage>